@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@{
    ViewData["Title"] = "Movie Streaming";
    var featuredMovies = ViewData["FeaturedMovies"] as List<ASPNET_Core_MVC.Models.Movie>;
    var recentMovies = ViewData["RecentMovies"] as List<ASPNET_Core_MVC.Models.Movie>;
}

<div class="text-center hero-section mb-5">
    <h1 class="display-4">Welcome to Movie Stream</h1>
    <p>Watch the latest movies online!</p>
</div>

@if (featuredMovies != null && featuredMovies.Any())
{
    <div class="featured-movies mb-5">
        <h2>Featured Movies</h2>
        <div class="row">
            @foreach (var movie in featuredMovies)
            {
                <div class="col-md-4 mb-4">
                    <div class="card movie-card">
                        <img src="@(string.IsNullOrEmpty(movie.ImageUrl) ? "/images/placeholder.jpg" : movie.ImageUrl)" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text text-truncate">@movie.Description</p>
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (recentMovies != null && recentMovies.Any())
{
    <div class="recent-movies">
        <h2>Recently Added</h2>
        <div class="row">
            @foreach (var movie in recentMovies)
            {
                <div class="col-md-4 mb-4">
                    <div class="card movie-card">
                        <img src="@(string.IsNullOrEmpty(movie.ImageUrl) ? "/images/placeholder.jpg" : movie.ImageUrl)" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text text-truncate">@movie.Description</p>
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
