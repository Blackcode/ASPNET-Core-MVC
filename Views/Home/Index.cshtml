
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Featured Movies Section -->
    <section class="featured-section">
        <h2>Featured Movies</h2>
        <div class="row">
            @if (ViewData["FeaturedMovies"] != null && ((IEnumerable<ASPNET_Core_MVC.Models.Movie>)ViewData["FeaturedMovies"]).Any())
            {
                foreach (var movie in (IEnumerable<ASPNET_Core_MVC.Models.Movie>)ViewData["FeaturedMovies"])
                {
                    <div class="col-md-2">
                        <div class="card mb-4">
                            <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <a href="/Movies/Details/@movie.Id" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p>No featured movies available.</p>
                </div>
            }
        </div>
    </section>

