
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1>Welcome to Movie Streaming</h1>
                <p class="lead">Watch the latest movies online anytime, anywhere.</p>
            </div>
            <div class="col-md-4 d-none d-md-block text-right">
                <i class="fa fa-film fa-5x"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    @if (ViewBag.FeaturedMovies != null && ViewBag.FeaturedMovies.Count > 0)
    {
        <div class="featured-movies">
            <h2>Featured Movies</h2>
            <div class="row">
                @foreach (var movie in ViewBag.FeaturedMovies)
                {
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="card movie-card">
                            <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Title">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <p class="card-text small">@movie.Genre | @movie.ReleaseYear</p>
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (ViewBag.RecentMovies != null && ViewBag.RecentMovies.Count > 0)
    {
        <div class="recent-movies">
            <h2>Recent Additions</h2>
            <div class="row">
                @foreach (var movie in ViewBag.RecentMovies)
                {
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="card movie-card">
                            <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Title">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <p class="card-text small">@movie.Genre | @movie.ReleaseYear</p>
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
