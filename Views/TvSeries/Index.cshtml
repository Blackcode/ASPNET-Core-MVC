
@model IEnumerable<ASPNET_Core_MVC.Models.TvSeries>

@{
    ViewData["Title"] = "TV Series";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="my-4">TV Series</h1>
        </div>
    </div>
    
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card movie-card">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Genre | @item.StartYear@(item.EndYear.HasValue ? $" - {item.EndYear}" : " - Present")</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary stretched-link">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
