
@model IEnumerable<ASPNET_Core_MVC.Models.Movie>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Movie Management</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Featured</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Genre</td>
                <td>@item.ReleaseYear</td>
                <td>@(item.IsFeatured ? "Yes" : "No")</td>
                <td>@item.DateAdded.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
