
@model ASPNET_Core_MVC.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this movie?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
        <dt class="col-sm-2">Release Year</dt>
        <dd class="col-sm-10">@Model.ReleaseYear</dd>
        <dt class="col-sm-2">Director</dt>
        <dd class="col-sm-10">@Model.Director</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
