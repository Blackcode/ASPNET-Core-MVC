
@model IEnumerable<ASPNET_Core_MVC.Models.Movie>

@{
    ViewData["Title"] = ViewData["GenreName"] + " Movies";
}

<h1>@ViewData["GenreName"] Movies</h1>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card movie-card">
                <img src="@(string.IsNullOrEmpty(movie.ImageUrl) ? "/images/placeholder.jpg" : movie.ImageUrl)" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text text-truncate">@movie.Description</p>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
