
@model ASPNET_Core_MVC.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="container movie-details">
    <div class="row">
        <div class="col-md-4 mb-4">
            <img src="@Model.ImageUrl" class="img-fluid movie-poster" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <div class="movie-info">
                <p><strong>Director:</strong> @Model.Director</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
                <p>@Model.Description</p>
                <a asp-controller="Movies" asp-action="Watch" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Watch Now</a>
            </div>
        </div>
    </div>
</div>
