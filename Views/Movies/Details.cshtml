
@model ASPNET_Core_MVC.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="movie-details">
    <div class="row">
        <div class="col-md-4">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/placeholder.jpg" : Model.ImageUrl)" class="img-fluid movie-poster" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p class="text-muted">@Model.ReleaseYear | @Model.Genre | Director: @Model.Director</p>
            <p>@Model.Description</p>
            <a asp-action="Watch" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">Watch Now</a>
        </div>
    </div>
</div>
